<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:fitsSystemWindows="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout
		android:background="@drawable/login_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/rl_1"
		android:layout_width="fill_parent"
		android:layout_height="90.0dip"
		android:layout_marginLeft="18.0dip"
		android:layout_marginRight="18.0dip"
		android:layout_marginTop="200.0dip"
		android:background="@drawable/login_rect_white">

		<RelativeLayout
			android:id="@+id/layoutPhone"
			android:layout_width="fill_parent"
			android:layout_height="45.0dip">

			<ImageView
				android:id="@+id/imgPhone"
				android:layout_width="15.0dip"
				android:layout_height="18.0dip"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10.0dip"
				android:background="@drawable/login_phone" />

			<EditText
				android:id="@+id/myAccount"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@+id/imgPhone"
				android:background="@null"
				android:hint="邮箱"
				android:inputType="textEmailAddress"
				android:maxLength="11"
				android:paddingLeft="15.0dip"
				android:singleLine="true"
				android:textColor="#ff111111"
				android:textColorHint="#ffaaaaaa"
				android:textSize="16.0sp" />

			<ImageView
				android:id="@+id/imgCancel"
				android:layout_width="16.0dip"
				android:layout_height="16.0dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="12.0dip"
				android:background="@drawable/cancel_phone"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="45.0dip"
			android:layout_below="@+id/layoutPhone">

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="0.5dip"
				android:background="#ffdddddd" />

			<ImageView
				android:id="@+id/imgCode"
				android:layout_width="15.0dip"
				android:layout_height="18.0dip"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10.0dip"
				android:background="@drawable/login_lock" />

			<EditText
				android:id="@+id/myPassword"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@+id/imgCode"
				android:background="@null"
				android:hint="密码"
				android:inputType="textPassword"
				android:maxLength="20"
				android:paddingLeft="15.0dip"
				android:singleLine="true"
				android:textColor="#ff111111"
				android:textColorHint="#ffaaaaaa"
				android:textSize="16.0sp" />
		</RelativeLayout>

	</RelativeLayout>

	<Button
		android:id="@+id/btnSure"
		android:layout_width="fill_parent"
		android:layout_height="40.0dip"
		android:layout_below="@+id/rl_1"
		android:layout_marginLeft="18.0dip"
		android:layout_marginRight="18.0dip"
		android:layout_marginTop="30.0dip"
		android:background="@drawable/btn_bg_gray"
		android:clickable="false"
		android:enabled="false"
		android:text="登录"
		android:textColor="#ffffffff"
		android:textSize="18.0sp" />

	<TextView
		android:id="@+id/btnReg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/btnSure"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30.0dip"
		android:text = "立即注册"
		android:textSize="15.0sp"
		android:textColor="@color/orange"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="50.0dp"
		android:orientation="horizontal"
		android:gravity="center">
		<Button
			android:id="@+id/login_wechat"
			android:layout_width="64.0dp"
			android:layout_height="64.0dp"
			android:background="@drawable/wechat_128"/>
		<Button
			android:id="@+id/login_weibo"
			android:layout_width="64.0dp"
			android:layout_height="64.0dp"
			android:layout_marginLeft="120dp"
			android:background="@drawable/weibo_128"/>

	</LinearLayout>

	</RelativeLayout>
</RelativeLayout>